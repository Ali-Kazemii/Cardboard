<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/iran_sans</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="progressBarWhite" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="progressbarStyle" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="MaterialTextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textAppearanceButton</item>
    </style>

    <style name="LabelCaptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textAppearanceCaption11</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextCaptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textAppearanceCaption11</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
    </style>


    <style name="SwitchViewStyle" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:checked">true</item>
    </style>




</resources>